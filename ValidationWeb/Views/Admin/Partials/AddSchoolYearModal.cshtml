
<div id="add-school-year-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h4 class="modal-title">Add School Year</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="~/Admin/" method="post">
                    <div id="submission-form-rows">
                        <div id="form-row-0" class="form-row">
                            <div class="col">
                                <input id="add-start-year" type="text" class="form-control" placeholder="Start Year (YYYY)" pattern="\d{4}" required/>
                            </div>
                            <div class="col">
                                <input id="add-end-year" type="text" class="form-control" placeholder="End Year (YYYY)" pattern="\d{4}" required/>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn minnesota-green" onclick="addNewSchoolYear();" data-dismiss="modal">Add School Year</button>
            </div>
        </div>
    </div>
</div>
